        print("Result %s = %e (Reference = %e)" % (name, result[name], refval)) 
        if abs(result[name] - refval) > error: 
            print("Mismatch |%e - %e| > %e)" % (result[name], refval, error)) 
            sys.exit(-1)  # Failure 

print("# Verification end") 
print("#" * 60) 

sys.exit(0)  # Success 
